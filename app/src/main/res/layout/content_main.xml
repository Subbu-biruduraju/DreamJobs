<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/ilovemyjobwall2"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.surekha.dreamjobs.MainActivity"
        tools:showIn="@layout/app_bar_main">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/safecaretechnologywall"
            android:background="#9d8"
            android:foregroundGravity="top"/>

        <android.support.v7.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            app:queryHint="Enter Skills,Designations, etc">
        </android.support.v7.widget.SearchView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <Button
                    android:id="@+id/signin_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:background="#eb3d01"
                    android:text="SIGN IN"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp" />

                <Button
                    android:id="@+id/register_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:background="#eb3d01"
                    android:text="REGISTER"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
